<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/windowBackground">

    <LinearLayout
        android:id="@+id/cliVersionBox"
        android:layout_width="181dp"
        android:layout_height="156dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/lightrounded"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/measurablesBox"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/upgrade"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/margin_medium"
            android:text="Upgrade?"
            android:theme="@style/PrimaryButton"
            android:visibility="visible"
            tools:layout_editor_absoluteX="177dp"
            tools:layout_editor_absoluteY="502dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/upgradeCheck"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_update_alert" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="198dp"
                android:layout_height="47dp"
                android:layout_weight="2"
                android:text="  CLI Version"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvUpgradeCheck"
            android:layout_width="103dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="... to ..."
            android:textColor="@color/daynight_textColor"
            tools:layout_editor_absoluteX="210dp"
            tools:layout_editor_absoluteY="627dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="RPI Details"
        android:textColor="@color/daynight_textColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rpiDetailBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/rpiDetailBox"
        android:layout_width="192dp"
        android:layout_height="153dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="128dp"
        android:background="@drawable/lightrounded"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/measurablesBox"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvRpiName"
            android:layout_width="263dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="hostname:"
            android:textColor="@color/daynight_textColor" />

        <TextView
            android:id="@+id/tvRpiType"
            android:layout_width="264dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Mode:"
            android:textColor="@color/daynight_textColor" />

        <TextView
            android:id="@+id/cpuModelText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="CPU:"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-92dp"
            tools:layout_editor_absoluteY="622dp" />

        <TextView
            android:id="@+id/image_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="Treehouses Image: "
            android:textColor="@color/daynight_textColor"
            android:textSize="13sp"
            tools:layout_editor_absoluteX="-104dp"
            tools:layout_editor_absoluteY="564dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bluetoothBox"
        android:layout_width="388dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/lightrounded"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/statusBluetoothIcon"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_bluetooth" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBluetooth"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="Bluetooth RPI Connection"
                    tools:layout_editor_absoluteX="-22dp"
                    tools:layout_editor_absoluteY="397dp" />

                <TextView
                    android:id="@+id/deviceAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dc.." />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bluetoothText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="28dp"
        android:text="Bluetooth"
        android:textColor="@color/daynight_textColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/remoteVersionBox"
        android:layout_width="388dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/lightrounded"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluetoothBox">

        <TextView
            android:id="@+id/remoteVersionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="  TreeHouses Remote Version:"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/editName"
        android:layout_width="46dp"
        android:layout_height="67dp"
        android:layout_gravity="end"
        android:layout_marginTop="408dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/ic_edit_black_24dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/rpiDetailBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/networkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="32dp"
        android:text="Network"
        android:textColor="@color/daynight_textColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remoteVersionBox" />

    <LinearLayout
        android:id="@+id/networkBox"
        android:layout_width="381dp"
        android:layout_height="157dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/lightrounded"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/remoteVersionBox">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_wifi" />

            <TextView
                android:id="@+id/wifiNetworkText"
                android:layout_width="151dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="WiFi Network"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/measurablesBox"
        android:layout_width="404dp"
        android:layout_height="98dp"
        android:background="@drawable/lightrounded"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvMemoryStatus"
            android:layout_width="371dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Memory: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Temperature:"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWifi"
        android:layout_width="355dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="RPI Wifi Connection"
        android:textColor="@color/daynight_textColor"
        app:layout_constraintBottom_toTopOf="@+id/measurablesBox"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>